<body class="admin-page" onload="">
    <div class="wrapper">

        <div id="my-toast">
          
        </div>

        <div class="admin-wrap">
            <div class="navigation">
              <!-- Logo -->
              <a href="#"class="logo-wrap" >
                  <img src="/img/logo.png" class="logo-img"></img>
              </a>

              <ul class="nav-list">
                <li class="nav-item {{#if dashboard includeZero=true}} active {{/if}}">
                    <a href="/admin" class="nav-item__btn fs-2-2">
                        <i class="fa-solid fa-gauge"></i>
                        <span>Trang Chính</span>
                    </a>
                </li>
              </ul>
              <div class="nav-divide"></div>

              <ul class="nav-list">
                <div class="nav-list__title">
                  <span>Sản phẩm</span>
                </div>
                <li class="nav-item {{#if all_product includeZero=true}} active {{/if}}">
                    <a href="/admin/products" class="nav-item__btn fs-2-2">
                        <i class="fa-brands fa-product-hunt fa-1x"></i>
                        <span>Tất cả sản phẩm</span>
                    </a>
                </li>
                <li class="nav-item {{#if add_product includeZero=true}} active {{/if}}">
                    <a href="/admin/add-product" class="nav-item__btn fs-2-2">
                        <i class="fa-solid fa-circle-plus"></i>
                        <span>Thêm sản phẩm mới</span>
                    </a>
                </li>
              </ul>
              <div class="nav-divide"></div>

              <ul class="nav-list">
                

                <li class="nav-item">
                    <a href="#" class="nav-item__btn">
                        <i class="fa-solid fa-cart-shopping"></i>
                        <span>Đơn Hàng</span>
                    </a>
                </li>
              </ul>
              <div class="nav-divide"></div>

              <ul class="nav-list">
                <li class="nav-item">
                    <a href="#" class="nav-item__btn">
                        <i class="fa-solid fa-warehouse"></i>
                        <span>Kho</span>
                    </a>
                </li>
              </ul>
              <div class="nav-divide"></div>

              <ul class="nav-list">
                <div class="nav-list__title">
                  <span>Nhân Sự</span>
                </div>

                <li class="nav-item">
                    <a href="#" class="nav-item__btn">
                        <i class="fa-solid fa-people-group"></i>
                        <span>Danh Sách Nhân Viên</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-item__btn">
                        <i class="fa-solid fa-person-circle-plus"></i>
                        <span>Thêm Nhân Viên</span>
                    </a>
                </li>
              </ul>

              <span class="nav-full-btn button button--primary" >
                <i class="fas fa-chevron-right"></i>
              </span>

            </div>
            <div class="body">
                {{> admin-header}}

                {{{body}}}
            </div>
        </div>

        {{!-- {{> footer}} --}}
        <div class="my-modal {{#if save_product_status includeZero=true}} active {{/if}}">
            <div class="modal__overlay"></div>
            <div class="modal__body">
              <div id="modal-successful" class="modal__item {{#if save_product_status includeZero=true}} active {{/if}}"> 
                <div class="modal__theme-exit">
                  <ion-icon name="close"></ion-icon>
                </div>
                <div class="successful-body">
                    <div class="successful-body__imgBox">
                      <img src="/img/icon/success_icon.webp" alt="">
                    </div>
                    <div class="successful-body__title">
                      <h2>Thêm sản phẩm thành công!</h2>
                    </div>
                    <div class="successful-body__message">
                      <p>Bạn có thể chỉnh sửa lại thông tin sản phẩm trong phần tất cả sản phẩm!</p>
                    </div>
                    <div class="successful-body__button">
                      <button class="button button--type2" >Đóng</button>
                    </div>
                </div>
              </div>

              <div id="modal-update-product" class="modal__item">
                <form id="update-product-body-form" action="/admin/update-product" method="POST" enctype="multipart/form-data">
                  <div class="form-group">
                      <label for="name_product">Tên sản phẩm</label>
                      <input class="form-control" type="text" name="name_product" id="name_product" placeholder="Nhập tên sản phẩm">
                      <span class="form-message"></span>
                  </div>
                    <div style="width: 236px;" class="form-group">
                        <label for="images_product">Hình ảnh</label><br>
                        <input type="file" accept="image/*" class="form-control-file" name="images_product" multiple id="images_product">
                        <span class="form-message"></span>
                    </div>
                    <div class="owl-carousel images_product-slider">
                          <div class="images_product-item">
                            <img src="/img/products/compa.jpg" alt="">
                          </div>
                          <div class="images_product-item">
                            <img src="/img/products/compa.jpg" alt="">
                          </div>
                          <div class="images_product-item">
                            <img src="/img/products/compa.jpg" alt="">
                          </div>
                      </div>
                    <div class="form-group form-group--category_product">
                        <label for="category_product mr-sm-2">Loại</label><br>
                        <select id="category_product" name="category_product" class="custom-select mr-sm-2">
                            {{#each categories}}
                                <option value="{{this.CATEGORY_ID}}">{{this.NAME}}</option>
                            {{/each}}
                        </select>
                        <span class="form-message"></span>
                        <div class="add-category-btn">
                            <i class="fa-solid fa-plus"></i>
                        </div>
                    </div>
                  <div class="row">
                      <div style="margin-right: 0px;" class="form-group">
                          <label for="name_product">Đơn vị</label>
                          <input class="form-control" type="text" name="basic_unit_product" id="basic_unit_product" placeholder="Nhập đơn vị">
                          <span class="form-message"></span>
                      </div>
                      <div class="form-group">
                          <label for="name_product">Giá</label>
                          <input class="form-control" type="number" name="price_per_unit_product" id="price_per_unit_product" placeholder="Nhập giá">
                          <span class="form-message"></span>
                      </div>
                  </div>
                  <div class="row">
                      <div style="margin-right: 0px;" class="form-group">
                          <label for="name_product">Nhãn hiệu</label>
                          <input class="form-control" type="text" name="brand_product" id="brand_product" placeholder="Nhập tên nhãn hiệu">
                          <span class="form-message"></span>
                      </div>
                      <div class="form-group">
                          <label for="name_product">Xuất xứ</label>
                          <input class="form-control" type="text" name="origin_product" id="origin_product" placeholder="Nhập nơi xuất xứ">
                          <span class="form-message"></span>
                      </div>
                  </div>
                  <div class="form-group">
                      <label for="name_product">Số lượng</label>
                      <input class="form-control" type="number" name="quantity_product" id="quantity_product" placeholder="Nhập số lượng hàng">
                      <span class="form-message"></span>
                  </div>
                  <div class="form-group">
                      <label for="description_product">Mô tả</label>
                      <textarea id="update-description-ckeditor" ></textarea>
                      <span class="form-message"></span>
                  </div>

                  <button id="add-product-button" class="add-product-body-button button button--type2">Cập Nhật</button>
                </form>
              </div>
            </div>
        </div>

    </div>


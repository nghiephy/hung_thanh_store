    <div class="wrapper">

        <div id="my-toast">
          
        </div>

        {{> header}}

        {{{body}}}

        {{> footer}}

        <div class="modal">
            <div class="modal__overlay"></div>
            <div class="modal__body">
              <div id="modal-login" class="modal-login modal__item">
                <div class="modal__theme-exit">
                  <ion-icon name="close"></ion-icon>
                </div>
                <form class="modal-login-form" action="#">
                  <h2 class="mb-4 title" >Đăng nhập</h2>
                  <div class="form-group">
                    <input type="text" name="email" id="" placeholder="Email">
                  </div>
                  <div class="form-group">
                    <input type="text" name="password" id="" placeholder="Password">
                  </div>
                  <button class="btn-login button mb-4" type="submit">Đăng nhập</button>
                  <a class="reset-password mb-4" href="#">Cài lại mật khẩu</a>
                  <span class="register mb-4" >Bạn chưa có tài khoản? <a href="#">Đăng ký</a></span>
                  <div class="divider">
                    Hoặc 
                  </div>
                  <div class="social-login">
                    <button class="button" type="butotn" >
                      <img src="/img/icon/facebook-icon.svg" alt="">
                    </button>
                    <button class="button" type="butotn" >
                       <img src="/img/icon/google-icon.svg" alt="">
                    </button>
                  </div>
                </form>
              </div>

              <div id="modal-register" class="modal-login modal__item">
                <div class="modal__theme-exit">
                  <ion-icon name="close"></ion-icon>
                </div>
                <form class="modal-login-form" action="#">
                  <h2 class="mb-4 title" >Đăng ký</h2>
                  <div class="form-group">
                    <input type="text" name="name" id="" placeholder="Họ tên">
                  </div>
                  <div class="form-group">
                    <input type="email" name="email" id="" placeholder="Email">
                  </div>
                  <div class="form-group">
                    <input type="text" name="password" id="" placeholder="Mật khẩu">
                  </div>
                  <div class="form-group">
                    <input type="text" name="password" id="" placeholder="Xác nhận mật khẩu">
                  </div>
                  <button class="btn-login button mb-4" type="submit">Đăng ký</button>
                  <a class="reset-password mb-4" href="#">Cài lại mật khẩu</a>
                  <span class="register mb-4" >Bạn đã có tài khoản? <a href="#">Đăng nhập</a></span>
                  <div class="divider">
                    Hoặc 
                  </div>
                  <div class="social-login">
                    <button class="button" type="butotn" >
                      <img src="/img/icon/facebook-icon.svg" alt="">
                    </button>
                    <button class="button" type="butotn" >
                       <img src="/img/icon/google-icon.svg" alt="">
                    </button>
                  </div>
                </form>
              </div>
            </div>
        </div>

    </div>


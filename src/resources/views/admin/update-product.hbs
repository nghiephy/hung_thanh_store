<section class="add-product">
    <h1 class="add-product-title" >Cập nhật thông tin sản phẩm</h1>

    <div class="add-product-body">
        <form id="add-product-body-form" action="/admin/add-product" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name_product">Tên sản phẩm</label>
                <input class="form-control" type="text" name="name_product" id="name_product" placeholder="Nhập tên sản phẩm" value="{{product.[0].NAME}}">
                <span class="form-message"></span>
            </div>
            <div style="width: 315px;" class="form-group">
                <label for="images_product">Hình ảnh</label><br>
                <input type="file" accept="image/*" class="form-control-file" name="images_product" multiple id="images_product">
                <span class="form-message"></span>
            </div>
            <div class="owl-carousel images_product-slider">
                {{#each product.[1]}}
                    <div class="images_product-item">
                        <img src="{{this.IMG_PATH}}" alt="{{this.IMG_DESCRIPTION}}">
                    </div>
                {{/each}}
            </div>
            <div class="form-group form-group--category_product">
                <label for="category_product mr-sm-2">Loại</label><br>
                <select id="category_product" name="category_product" class="custom-select mr-sm-2">
                    {{#each categories}}
                        <option {{#ifEquals this.CATEGORY_ID ../product.[0].CATEGORY_ID}} selected {{/ifEquals}} value="{{this.CATEGORY_ID}}">{{this.NAME}}</option>
                    {{/each}}
                </select>
                <span class="form-message"></span>
                <div class="add-category-btn">
                    <i class="fa-solid fa-plus"></i>
                </div>
            </div>
            <div class="row">
                <div style="margin-right: 100px;" class="form-group">
                    <label for="name_product">Đơn vị</label>
                    <input class="form-control" type="text" name="basic_unit_product" id="basic_unit_product" placeholder="Nhập đơn vị" value="{{product.[0].BASIC_UNIT}}">
                    <span class="form-message"></span>
                </div>
                <div class="form-group">
                    <label for="name_product">Giá</label>
                    <input class="form-control" type="number" name="price_per_unit_product" id="price_per_unit_product" placeholder="Nhập giá" value="{{product.[0].PRICE_PER_UNIT}}">
                    <span class="form-message"></span>
                </div>
            </div>
            <div class="row">
                <div style="margin-right: 100px;" class="form-group">
                    <label for="name_product">Nhãn hiệu</label>
                    <input class="form-control" type="text" name="brand_product" id="brand_product" placeholder="Nhập tên nhãn hiệu" value="{{product.[0].BRAND}}">
                    <span class="form-message"></span>
                </div>
                <div class="form-group">
                    <label for="name_product">Xuất xứ</label>
                    <input class="form-control" type="text" name="origin_product" id="origin_product" placeholder="Nhập nơi xuất xứ" value="{{product.[0].ORIGIN}}">
                    <span class="form-message"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="name_product">Số lượng</label>
                <input class="form-control" type="number" name="quantity_product" id="quantity_product" placeholder="Nhập số lượng hàng" value="{{stock.QUANTITY}}">
                <span class="form-message"></span>
            </div>
             <div class="form-group">
                <label for="update-description_product">Mô tả</label>
                <textarea id="update-description-ckeditor" >{{product.[0].DESCRIPTION}}</textarea>
                <span class="form-message"></span>
            </div>

            <button id="add-product-button" class="add-product-body-button button button--type2">Cập Nhật</button>
        </form>
    </div>
</section>
 <script src="/js/validator.js"></script>
<script type="module" src="/js/admin/update-product.js"></script>
<section class="admin-orders">
    <h1 class="admin-orders-title" >Danh sách đơn hàng</h1>

    <table id="admin-orders-table" class="display nowrap admin-orders-table" style="width:100%">
        <thead>
            <tr>
                <th>Mã đơn</th>
                <th>Khách hàng</th>
                <th>Ghi chú</th>
                <th>Địa chỉ</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Hàng động</th>
            </tr>
        </thead>
        <tbody>
            {{#each trash_list}}
                <tr class="admin-product-item">
                    <td>{{this.PRODUCT_ID}}</td>
                    <td>{{this.NAME}}</td>
                    <td>{{this.CAT_NAME}}</td>
                    <td>{{this.BASIC_UNIT}}</td>
                    <td>{{this.PRICE_PER_UNIT}}</td>
                    <td>{{this.BRAND}}</td>
                    <td>{{this.ORIGIN}}</td>
                    <td class="admin-product-item--actions" >
                        <a class="button button-modify trash-product-item-restore" onclick="return false" href="/admin/restore-product/{{this.PRODUCT_ID}}">Khôi phục</a>
                        <a class="button button-delete trash-product-item-destroy" onclick="return false" href="/admin/destroy-product/{{this.PRODUCT_ID}}/{{this.SLUG}}">Xoá</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</section>
<script src="/js/admin/order.js"></script>